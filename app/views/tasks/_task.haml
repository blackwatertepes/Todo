%tr.task
  %td
    - if task.complete?
      = link_to task.name, task_uncomplete_path(task), class: [:complete, task.status]
    - else
      = link_to task.name, task_complete_path(task.id), class: [task.status]
  
  %td
    = task.stage.name

  %td
    = task.children.count

  %td
    .controls
      = link_to "UP", task_up_path(task), class: [:btn, "btn-mini"]
      = link_to "Down", task_down_path(task), class: [:btn, "btn-mini"]
      = link_to "X", task_path(task), method: :delete, class: [:btn, "btn-mini", :delete]
